extends ../layouts/common
block content
  h1 Create User
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action="/users/create" method="POST")
    .form-group
      label User Name
      input.form-control(type="text" name="name" value= values ? values.name : "")
      label User Email
      input.form-control(type="text" name="email" value= values ? values.email : "")
      input(type='hidden' name='password' value='123123')
    button.btn.btn-primary Create
