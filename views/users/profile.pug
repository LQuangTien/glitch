extends ../layouts/common
block content
  h1 Profile User
  if errors
    each error in errors
      .alert.alert-danger= error
  
  form(method="POST")
    .form-group
      label User Name
      input.form-control(type="text" name="name" value= values ? values.name : user.name)
      label User Email
      input.form-control(type="text" name="email" value= values ? values.email : user.email)
      label Avatar
      div
        img(src=user.avatar width='64')
    a.btn.btn-primary(href="/users/" + user.id +"/profile/avatar") Update Avatar
    button.btn.btn-primary.ml-2 Update Profile
